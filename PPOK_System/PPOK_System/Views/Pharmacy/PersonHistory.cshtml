@model List<PPOK_System.Domain.Models.Message>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Message History</h4>
        </div>
        <div class="modal-body">
            @if (Model.Count > 0) {
                <h4>@Model[0].prescription.customer.first_name @Model[0].prescription.customer.last_name</h4>
                <div class="table-responsive">
                    <table id="history-table" class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Drug</th>
                                <th>Response</th>
                                <th>Fill Date</th>
                                <th>Pick Up Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model) {
                                <tr>
                                    <td>@m.message_id</td>
                                    <td>@m.prescription.drug.drug_id</td>
                                    <td>@m.response</td>
                                    <td>@m.fill_time</td>
                                    <td>@m.pick_up_time</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            } else {
                <div class="row">No Content</div>
            }
        </div>
        <div class="modal-footer">
            <input type="button" value="Close" class="btn btn-default" data-dismiss="modal" />
        </div>
    </div>
</div>

