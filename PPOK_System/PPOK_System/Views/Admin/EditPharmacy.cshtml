@model PPOK_System.Domain.Models.Store

@using (Html.BeginForm("EditPharmacy", "Admin", FormMethod.Post, new { id = "create-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.store_id)
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit @Model.name</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <td>Store Name</td>
                            <td>@Html.EditorFor(m => m.name)</td>
                        </tr>
                        <tr>
                            <td>Store ID</td>
                            <td>@Html.DisplayFor(m => m.store_id)</td>
                        </tr>
                        <tr>
                            <td>Address</td>
                            <td>@Html.EditorFor(m => m.address)</td>
                        </tr>
                        <tr>
                            <td>City</td>
                            <td>@Html.EditorFor(m => m.city)</td>
                        </tr>
                        <tr>
                            <td>State</td>
                            <td>@Html.EditorFor(m => m.state)</td>
                        </tr>
                        <tr>
                            <td>Zip Code</td>
                            <td>@Html.EditorFor(m => m.zip)</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
