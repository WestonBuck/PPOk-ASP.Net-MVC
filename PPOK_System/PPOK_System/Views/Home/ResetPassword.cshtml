@model PPOK_System.Domain.Models.Person
@{
    ViewBag.Title = "ResetPassword";
}

<h2>ResetPassword</h2>

<form class="form-horizontal">
    <fieldset>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="newPassword">New Password</label>
            <div class="col-md-4">
                <input id="newPassword" name="newPassword" type="text" placeholder="Password" class="form-control input-md" required="">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="reenterPassword">Reenter Password</label>
            <div class="col-md-4">
                <input id="reenterPassword" name="reenterPassword" type="text" placeholder="Password" class="form-control input-md" required="">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="verificationCode">Verification Code</label>
            <div class="col-md-4">
                <input id="verificationCode" name="verificationCode" type="text" placeholder="Code" class="form-control input-md" required="">

            </div>
        </div>

        <!-- Button (Double) -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="button1id"></label>
            <div class="col-md-8">
                <button id="cancelBtn" name="CancelBtn" class="btn btn-primary">Cancel</button>
                <button id="submitBtn" name="SubmitBtn" class="btn btn-primary">Submit</button>
            </div>
        </div>

    </fieldset>
</form>
